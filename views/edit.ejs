<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>

    <form class="ui form" action="/blogs/<%= blog._id %>" method="PUT">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" id="" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" id="" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Body text</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input class="ui primary big basic button" type="submit" value="Update">
    </form>
</div>

<% include ./partials/footer %>
